{{> head }}
<link rel="stylesheet" href="js/registroComponents.css">
</head>
<body>

    {{> header }}

    {{!-- <div class="g-signin2" data-onsuccess="onSignIn"></div> --}}

    <div class="hero" >
        <div class="heroBackground">

        </div>
        <form class="login" id="login">
            <div class="contenedor">
                <p>REGISTRATE</p>
                <input type="text" placeholder="nombre" name="nombre" id="nombre" required>
                <input type="text" placeholder="correo electrónico" name="email" id="email" required>
                <input type="password" placeholder="contraseña"  name="password" id="password" required>
                <input type="password" placeholder="repetir contraseña"  name="password2" id="password2" required>

                <ul id="mostrarErrores"></ul>
                

                <a href="" class="buttonLogin" id="buttonRegistro">Registro</a>

                <div class="loginButtonsOpcionales">
                    <a href="#" class="facebookButton" ><i class="fa fa-facebook-f"></i></a>
                    {{!-- <a href="#" class="g-signin2 googleButton" data-width="100%" data-padding="10px 0px"  data-onsuccess="onSignIn" ><i class="fa fa-google"></i></a> --}}
                
                {{!-- BUTTON CUSTOM GOOGLE --}}
                <div id="gSignInWrapper">
                        <span class="label">Sign in with:</span>
                        <div id="customBtn" class="customGPlusSignIn">
                        <span class="icon"></span>
                        <span class="buttonText">Google</span>
                        </div>
                </div>
                <div id="name"></div>

                </div>
            </div>
        </form>
    </div>

    <div class="mdc-snackbar">
    <div class="mdc-snackbar__surface">
        <div class="mdc-snackbar__label" role="status" aria-live="polite">Can't send photo. Retry in 5 seconds.
        </div>
        <div class="mdc-snackbar__actions">
            <button type="button" class="mdc-button mdc-snackbar__action retryButton">Retry</button>
            <button class="mdc-icon-button mdc-snackbar__dismiss material-icons buttonDismiss " title="Dismiss">close</button>
        </div>
    </div>
</div>



    <script src="https://apis.google.com/js/api:client.js"></script>
    {{!-- <script src="https://apis.google.com/js/platform.js" async defer></script> --}}
    <script src="js/index.bundle.js"></script>
    <script src="js/registro.bundle.js"></script>
</body>
</html>