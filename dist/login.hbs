{{> head }}
<link rel="stylesheet" href="js/loginComponents.css">
</head>
<body>

    {{> header }}

    <div class="g-signin2" data-onsuccess="onSignIn"></div>

    <div class="hero" >
        <div class="heroBackground">

        </div>
        <form class="login" id="login">
            <div class="contenedor">
                <p>¿Ya tienes cuenta?</p>

                

                <input type="text" placeholder="example@gmail.com" name="email" id="email">
                <input type="password" placeholder="*****"  name="password" id="password">
                <ul id="mostrarErrores"></ul>
                <div class="groupRecordar" >
                    <div class="recordar">
                        <input type="checkbox" name="recordar" id="recordar" value="recordar">
                        <label for="recordar"><span id="buttonRecordar" ></span>Recordar</label>
                    </div>
                    
                    <p><a href="">olvide mi contraseña</a></p>
                </div>

                <a href="" class="buttonLogin" id="buttonLogin">Login</a>

                <div class="loginButtonsOpcionales">
                    <a href="#" class="facebookButton" ><i class="fa fa-facebook-f"></i></a>
                    <a href="#" class="googleButton" ><i class="fa fa-google"></i></a>
                </div>
            </div>
        </form>
    </div>

    <div class="mdc-snackbar">
    <div class="mdc-snackbar__surface">
        <div class="mdc-snackbar__label" role="status" aria-live="polite">Can't send photo. Retry in 5 seconds.
        </div>
        <div class="mdc-snackbar__actions">
            <button type="button" class="mdc-button mdc-snackbar__action retryButton">Retry</button>
            <button class="mdc-icon-button mdc-snackbar__dismiss material-icons buttonDismiss " title="Dismiss">close</button>
        </div>
    </div>
</div>



    
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script src="js/index.bundle.js"></script>
    <script src="js/login.bundle.js"></script>
</body>
</html>